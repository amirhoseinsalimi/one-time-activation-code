{
  "name": "one-time-activation-code",
  "version": "1.0.5",
  "description": "One Time Activation Code",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"src/**/*.{ts,tsx,js}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --watchAll",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sadra/one-time-activation-code"
  },
  "keywords": [
    "otp",
    "auth",
    "authentication",
    "one time password"
  ],
  "author": "Sadra Isapanah Amlashi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sadra/one-time-activation-code/issues"
  },
  "homepage": "https://github.com/sadra/one-time-activation-code#readme",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "rootDir": "./",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "node-cache": "^5.1.2"
  }
}
